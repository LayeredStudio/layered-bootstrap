    "sass"
  ],
  "author": "Andrei Igna <andrei@laye.red>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LayeredStudio/layered-design/issues"
  },
  "homepage": "https://layered.design/",
  "dependencies": {
    "bootstrap": "^4.5.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "css-loader": "^3.5.3",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
