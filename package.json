{
  "name": "@layered/layered-design",
  "version": "1.3.0",
  "description": "Layered design system, based on Bootstrap",
  "style": "dist/layered.css",
  "sass": "src/layered.scss",
  "main": "dist/layered.js",
  "scripts": {
    "prettier": "prettier \"src/**/*.{js,sass}\"",
    "prettier:write": "npm run prettier -- --write",
    "build": "NODE_ENV=production webpack --hide-modules",
    "build:dev": "NODE_ENV=development webpack --hide-modules",
    "watch": "npm run build -- --watch",
    "watch:dev": "HMR=true npm run build:dev -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/LayeredStudio/layered-design.git"
  },
  "keywords": [
    "layered",
